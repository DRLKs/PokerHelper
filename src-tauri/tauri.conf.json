{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PokerHelper",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.pokerhelper.dev",
      "icon": [
        "icons/icon.png"
      ]
    },
    "windows": [
      {
        "title": "PokerHelper",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
